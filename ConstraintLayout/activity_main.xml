        app:cornerRadius="1dp"/>

    <Button
        android:id="@+id/button_PDM"
        android:text="+/-"
        android:layout_marginLeft="4dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:backgroundTint="#dedede"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cornerRadius="1dp"/>

    <Button
        android:id="@+id/button_0"
        android:text="0"
        android:layout_marginLeft="1dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:backgroundTint="#efefef"
        app:layout_constraintLeft_toRightOf="@id/button_PDM"
        app:layout_constraintTop_toTopOf="@id/button_PDM"
        app:cornerRadius="1dp"/>

    <Button
        android:id="@+id/button_Dot"
        android:text="."
        android:layout_marginLeft="1dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:backgroundTint="#dedede"
        app:layout_constraintLeft_toRightOf="@id/button_0"
        app:layout_constraintTop_toTopOf="@id/button_0"
        app:cornerRadius="1dp"/>

    <Button
        android:id="@+id/button_Equal"
        android:text="="
        android:layout_marginLeft="1dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:backgroundTint="#dedede"
        app:layout_constraintLeft_toRightOf="@id/button_Dot"
        app:layout_constraintTop_toTopOf="@id/button_Dot"
        app:cornerRadius="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>