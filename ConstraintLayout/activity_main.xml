<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffffff">

    <TextView
        android:id="@+id/result"
        android:text="0"
        android:layout_width="405dp"
        android:layout_height="275dp"
        android:layout_margin="15dp"
        android:background="#ffffff"
        android:gravity="end|center_vertical"
        android:textSize="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_CE"/>

    <Button
        android:id="@+id/button_CE"
        android:text="CE"
        android:layout_marginLeft="4dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:backgroundTint="#dedede"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_7"
        app:cornerRadius="1dp"/>

    <Button
        android:id="@+id/button_C"
        android:text="C"
        android:layout_marginLeft="1dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:backgroundTint="#dedede"
        app:layout_constraintLeft_toRightOf="@id/button_CE"
        app:layout_constraintTop_toTopOf="@id/button_CE"
        app:cornerRadius="1dp"/>

    <Button
        android:id="@+id/button_BS"
        android:text="BS"
        android:layout_marginLeft="1dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:backgroundTint="#dedede"
        app:layout_constraintLeft_toRightOf="@id/button_C"
        app:layout_constraintTop_toTopOf="@id/button_C"
        app:cornerRadius="1dp"/>

    <Button
        android:id="@+id/button_Divide"
        android:text="/"
        android:layout_marginLeft="1dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:backgroundTint="#dedede"
        app:layout_constraintLeft_toRightOf="@id/button_BS"
        app:layout_constraintTop_toTopOf="@id/button_BS"
        app:cornerRadius="1dp"/>

    <Button
        android:id="@+id/button_7"
        android:text="7"
        android:layout_marginLeft="4dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:backgroundTint="#efefef"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_4"
        app:cornerRadius="1dp"/>

    <Button
        android:id="@+id/button_8"
        android:text="8"
        android:layout_marginLeft="1dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:backgroundTint="#efefef"
        app:layout_constraintLeft_toRightOf="@id/button_7"
        app:layout_constraintTop_toTopOf="@id/button_7"
        app:cornerRadius="1dp"/>

    <Button
        android:id="@+id/button_9"
        android:text="9"
        android:layout_marginLeft="1dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:backgroundTint="#efefef"
        app:layout_constraintLeft_toRightOf="@id/button_8"
        app:layout_constraintTop_toTopOf="@id/button_8"
        app:cornerRadius="1dp"/>

    <Button
        android:id="@+id/button_Multiply"
        android:text="X"
        android:layout_marginLeft="1dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:backgroundTint="#dedede"
        app:layout_constraintLeft_toRightOf="@id/button_9"
        app:layout_constraintTop_toTopOf="@id/button_9"
        app:cornerRadius="1dp"/>

    <Button
        android:id="@+id/button_4"
        android:text="4"
        android:layout_marginLeft="4dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:backgroundTint="#efefef"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_1"
        app:cornerRadius="1dp"/>

    <Button
        android:id="@+id/button_5"
        android:text="5"
        android:layout_marginLeft="1dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:backgroundTint="#efefef"
        app:layout_constraintLeft_toRightOf="@id/button_4"
        app:layout_constraintTop_toTopOf="@id/button_4"
        app:cornerRadius="1dp"/>

    <Button
        android:id="@+id/button_6"
        android:text="6"
        android:layout_marginLeft="1dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:backgroundTint="#efefef"
        app:layout_constraintLeft_toRightOf="@id/button_5"
        app:layout_constraintTop_toTopOf="@id/button_5"
        app:cornerRadius="1dp"/>

    <Button
        android:id="@+id/button_Minus"
        android:text="-"
        android:layout_marginLeft="1dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:backgroundTint="#dedede"
        app:layout_constraintLeft_toRightOf="@id/button_6"
        app:layout_constraintTop_toTopOf="@id/button_6"
        app:cornerRadius="1dp"/>

    <Button
        android:id="@+id/button_1"
        android:text="1"
        android:layout_marginLeft="4dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:backgroundTint="#efefef"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_PDM"
        app:cornerRadius="1dp"/>

    <Button
        android:id="@+id/button_2"
        android:text="2"
        android:layout_marginLeft="1dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:backgroundTint="#efefef"
        app:layout_constraintLeft_toRightOf="@id/button_1"
        app:layout_constraintTop_toTopOf="@id/button_1"
        app:cornerRadius="1dp"/>

    <Button
        android:id="@+id/button_3"
        android:text="3"
        android:layout_marginLeft="1dp"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:backgroundTint="#efefef"
